<%- model_class = Application -%>
<br><br>
<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <img src="http://payload249.cargocollective.com/1/14/469404/7289999/all-end-product.jpg" class="img-responsive">
      </div>
      <div class="col-md-6">
        <h1 class="brand-blue">
          <%= @application.name %>
          <small>
            &nbsp;<%= @application.platform %>
          </small>
        </h1>
        <p class="text-justify">
          <%= @application.description %>
            <br>
            <br>
        </p>
        <div class="row">
          <div class="col-md-12">
              <a href="#"></i></a>
              <a href="http://systers.io/slack-systers-opensource/" target="_blank"><i class="fa fa-2x fa-fw fa-slack"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="section">
  <div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>What is new?</h2>
            <hr>
        </div>
        <div class="col-md-6">
            <h2>Forum topics</h2>
            <hr>
        </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <ul class="media-list">
        <% @application.notifications.each do |notification| %>
          <li class="media">
              <div class="media-body">
                  <h4 class="media-heading">
                    <%= notification.title %>
                  </h4>
                  <p>
                    <%= notification.content %>
                  </p>
              </div>
          </li>
        <% end %>
      </ul>
      <a class="btn btn-primary">View all notifications <i class="fa fa-fw fa-list"></i></a>
      <% if current_user.present? %>
        <% if current_user.role == "admin" || current_user.role == "superadmin" %>
          <%= content_tag :a, "Add new web application", href: "#new_notification_form", class: 'btn btn-default', data: {toggle: 'modal'} do %>
              Add new notification
              <i class="fa fa-fw fa-plus-circle"></i>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-6">
    </div>
  </div>
</div>

<div class="bootstrap-modal modal fade" id="new_notification_form">
  <div class="modal-dialog ">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Add new notification</h4>
      </div>
      <div class="modal-body">
        <%= render :partial => 'notifications/notification_form' %>
      </div>
    </div>
  </div>
</div>